---
import { siteConfig } from "../config";
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 hidden md:block transition-all duration-300 bg-gray-50 border-t border-gray-200"
>
  <nav class="max-w-7xl mx-auto px-8 py-4">
    <div class="text-4xl text-indigo-600">
      <b>spaso</b>code
    </div>
    <ul class="flex gap-8 justify-end">
      <li>
        <a
          href="#about"
          class="text-gray-700 hover:text-indigo-600 transition-colors font-medium px-3 py-[10px]"
        >
          About
        </a>
      </li>
      <li>
        <a
            href="#service"
            class="text-gray-700 hover:text-indigo-600 transition-colors font-medium"
        >
          Services
        </a>
      </li>
      <li>
        <a
            href="#contact"
            class="text-gray-700 hover:text-indigo-600 transition-colors font-medium"
        >
          Contact
        </a>
      </li>
    </ul>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (window.scrollY > 100) {
      header?.classList.add("bg-white/80", "backdrop-blur-sm");
    } else {
      header?.classList.remove("bg-white/80", "backdrop-blur-sm");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
